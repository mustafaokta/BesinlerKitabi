<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="besin"
            type="com.mustafaokta.besinlerkitabi.model.Besin" />
        <variable
            name="listener"
            type="com.mustafaokta.besinlerkitabi.adaptor.BesinClickListener" />
    </data>

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:onClick="@{listener:: besinTiklandi}"
    android:orientation="horizontal"
    >
<TextView
    android:id="@+id/besin_uuid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:text="@{String.valueOf(besin.uuid)}"
    >

</TextView>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="2"
        android:downloadImage="@{besin.besinGorsel}"
        >

    </ImageView>
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="3"
    android:gravity="center">
    <TextView
        android:id="@+id/isimText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{besin.besinIsim}">
    </TextView>
    <TextView
        android:id="@+id/kaloriText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{besin.besinKalori}">
    </TextView>

</LinearLayout>
</LinearLayout>
</layout>